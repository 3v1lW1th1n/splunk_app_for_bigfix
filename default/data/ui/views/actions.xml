<?xml version='1.0' encoding='utf-8'?>
<dashboard>
  <label>Action Overview</label>
  <row>
    <html>
      <h1>Action Overview</h1>
      <p>
        For filterable details, head over to the <a href="action_details">detailed action view</a>.
      </p>
    </html>
  </row>
  <row>
    <table>
      <searchName>action open</searchName>
      <title>Open Actions</title>
      <option name="count">10</option>
      <option name="showPager">true</option>
    </table>
  </row>
  <row>
    <chart>
      <searchName>action results by user</searchName>
      <title>Action Result Count By User (last 30 days)</title>
      <option name="charting.chart">pie</option>
    </chart>
    <chart>
      <searchName>action results by status</searchName>
      <title>Action Result Count By Status (last 30 days)</title>
      <option name="charting.chart">pie</option>
    </chart>
  </row>
  <row>
    <chart>
      <searchName>action results by os</searchName>
      <title>Action Result Count By OS (last 30 days)</title>
      <option name="charting.chart">column</option>
    </chart>
  </row>
  <row>
    <table>
      <searchName>action complete</searchName>
      <title>Completed Actions (last 30 days)</title>
      <option name="count">10</option>
      <option name="showPager">true</option>
    </table>
  </row>
</dashboard>
